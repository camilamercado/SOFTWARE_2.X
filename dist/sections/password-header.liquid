{% comment %}
<header class="password-header" role="banner">
  <div class="password-logo">
    {% if section.settings.logo %}
      <a href="/" itemprop="url" class="site-header__logo-image">
        {% capture image_size %}{{ section.settings.logo_max_width | escape }}x{% endcapture %}
        <img src="{{ section.settings.logo | img_url: image_size }}"
             srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
             alt="{{ section.settings.logo.alt | default: shop.name }}"
             itemprop="logo">
      </a>
    {% else %}
      <h1 class="h2">
        <span class="logo">{{ shop.name }}</span>
      </h1>
    {% endif %}
  </div>
</header>
{% endcomment %}
{% schema %}
  {
    "name": {
      "de": "Titel",
      "en": "Header",
      "ja": "ヘッダー",
      "pt-BR": "Cabeçalho",
      "es": "Encabezado",
      "it": "Header",
      "fr": "En-tête"
    },
    "class": "password-header-section password-page-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": {
          "de": "Logo-Foto",
          "en": "Logo image",
          "ja": "ロゴ画像",
          "pt-BR": "Imagem do logotipo",
          "es": "Imagen del logotipo",
          "it": "Immagine del logo",
          "fr": "Image du logo"
        }
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": {
          "de": "Benutzerdefinierte Logobreite (Pixel)",
          "en": "Custom logo width (in pixels)",
          "ja": "ロゴの幅をカスタムする（ピクセルで）",
          "pt-BR": "Largura do logotipo personalizado (em pixels)",
          "es": "Ancho del logotipo personalizado (en píxeles)",
          "it": "Larghezza logo personalizzato (in pixel)",
          "fr": "Largeur personnalisée du logo (en pixels)"
        },
        "default": {
          "de": "100",
          "en": "100",
          "ja": "100",
          "pt-BR": "100",
          "es": "100",
          "it": "100",
          "fr": "100"
        }
      }
    ]
  }
{% endschema %}
